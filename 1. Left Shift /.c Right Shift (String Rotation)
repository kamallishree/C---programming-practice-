#include <stdio.h>
#include <string.h>

int main() {
    char str[100], temp;
    int n, i, choice;

    printf("Enter string: ");
    scanf("%s", str);

    printf("How many rotations: ");
    scanf("%d", &n);

    printf("1. Left Shift\n2. Right Shift\nEnter choice: ");
    scanf("%d", &choice);

    int len = strlen(str);

    for(i = 0; i < n; i++) {

        if(choice == 1) {   // Left shift
            temp = str[0];
            for(int j = 0; j < len - 1; j++)
                str[j] = str[j + 1];
            str[len - 1] = temp;
        }

        else if(choice == 2) {  // Right shift
            temp = str[len - 1];
            for(int j = len - 1; j > 0; j--)
                str[j] = str[j - 1];
            str[0] = temp;
        }
    }

    printf("Result string: %s", str);

    return 0;
}
